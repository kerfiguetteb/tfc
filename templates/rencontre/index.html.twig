{% extends 'base.html.twig' %}

{% block title %}Rencontre index{% endblock %}

{% block body %}
    <h1>Rencontre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rencontre in rencontres %}
            <tr>
                <td>{{ rencontre.id }}</td>
                <td>
                    <a href="{{ path('rencontre_show', {'id': rencontre.id}) }}">show</a>
                    <a href="{{ path('rencontre_edit', {'id': rencontre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('rencontre_new') }}">Create new</a>
{% endblock %}
