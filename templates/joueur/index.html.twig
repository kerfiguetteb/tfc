{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
    <h1>Joueur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Sexe</th>
                <th>CartonJaune</th>
                <th>CartonRouge</th>
                <th>But</th>
                <th>DateDeNaissance</th>
                <th>MatchJouer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id }}</td>
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.prenom }}</td>
                <td>{{ joueur.email }}</td>
                <td>{{ joueur.sexe }}</td>
                <td>{{ joueur.cartonJaune }}</td>
                <td>{{ joueur.cartonRouge }}</td>
                <td>{{ joueur.but }}</td>
                <td>{{ joueur.dateDeNaissance ? joueur.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ joueur.matchJouer }}</td>
                <td>
                    <a href="{{ path('joueur_show', {'id': joueur.id}) }}">show</a>
                    <a href="{{ path('joueur_edit', {'id': joueur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('joueur_new') }}">Create new</a>
{% endblock %}
