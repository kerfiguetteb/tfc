    <div class="col-md-4">
      <div class="row flex justify-content-start flex-wrap">
        {% for picture in post.pictures %}
        <div class="col" style="width: 100px; margin: 5px;">
          <form method="post" action="{{ path('admin.picture.delete', {id: picture.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes vous vraiment sûr ?')">
            <img src="{{ vich_uploader_asset(picture, 'imageFile')}}" width="100" alt="">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
            <button class="btn btn-danger">Supprimer</button>
          </form>
        </div>
      {% endfor %}
      </div>
    </div>  

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}

