{% extends 'base.html.twig' %}

{% block title %}Entraineur{% endblock %}

{% block body %}
    <h1>Entraineur</h1>
        <div>
    <a href="{{ path('admin_entraineur_new') }}" class="btn btn-secondary"style="margin:15px"> +  Ajouter entraineur</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Section</th>
                <th>Categorie</th>
                <th>Entraineur</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>

            {% for entraineur in entraineurs %}

            <tr>

                {% if entraineur.categories %}
                <td>{{entraineur.categories.section}}</td>
                <td>{{entraineur.categories.nom}}  {{entraineur.categories.groupe}}</td>
                {% endif %}
                   
                <td> <a href="{{ path('admin_entraineur_show', {'id': entraineur.id}) }}">{{ entraineur.nom}} {{ entraineur.prenom}}</a></td>
                <td>
                    <a href="{{ path('admin_entraineur_edit', {'id': entraineur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
