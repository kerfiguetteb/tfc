{% extends 'base.html.twig' %}

{% block title %}Entraineur{% endblock %}

{% block body %}
    <h1>Entraineur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entraineur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entraineur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entraineur.prenom }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_JOUEUR') %}
    <a href="{{ path('joueur_index') }}">back to list</a>
    {% else %}
    <a href="{{ path('entraineur_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('entraineur_edit', {'id': entraineur.id}) }}">edit</a>
    {{ include('entraineur/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
