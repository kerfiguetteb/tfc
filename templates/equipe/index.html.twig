{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1>Equipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Pts</th>
                <th>Jo</th>
                <th>Ga</th>
                <th>Nu</th>
                <th>Pe</th>
                <th>Bp</th>
                <th>Bc</th>
                <th>Diff</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.name }}</td>
                <td>{{ equipe.pts }}</td>
                <td>{{ equipe.jo }}</td>
                <td>{{ equipe.ga }}</td>
                <td>{{ equipe.nu }}</td>
                <td>{{ equipe.pe }}</td>
                <td>{{ equipe.bp }}</td>
                <td>{{ equipe.bc }}</td>
                <td>{{ equipe.diff }}</td>
                <td>
                    <a href="{{ path('equipe_show', {'id': equipe.id}) }}">show</a>
                    <a href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipe_new') }}">Create new</a>
{% endblock %}
